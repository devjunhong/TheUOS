<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/widget_time_table_list_peroid"
            android:layout_width="@dimen/widget_timetable_5x4_time_margin"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/widget_time_table_list_mon"
            android:layout_width="@dimen/widget_timetable_5x4_subject_margin"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/widget_time_table_list_tue"
            android:layout_width="@dimen/widget_timetable_5x4_subject_margin"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/widget_time_table_list_wed"
            android:layout_width="@dimen/widget_timetable_5x4_subject_margin"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/widget_time_table_list_thr"
            android:layout_width="@dimen/widget_timetable_5x4_subject_margin"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/widget_time_table_list_fri"
            android:layout_width="@dimen/widget_timetable_5x4_subject_margin"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@android:color/darker_gray" />

</LinearLayout>