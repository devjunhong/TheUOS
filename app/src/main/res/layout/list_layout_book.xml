<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="?attr/cardBackgroundColor"
    app:cardCornerRadius="6dp">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleInAdapter="true"
        app:mrl_rippleColor="?colorPrimaryDark">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/tab_booksearch_list_image_book_image"
                android:layout_width="90dp"
                android:layout_height="125dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:src="@drawable/noimg_en"
                android:layout_marginRight="3dp"
                android:contentDescription="@string/tab_book_book_opt" />

            <RelativeLayout
                android:id="@+id/tab_booksearch_list_info_layout"
                android:layout_width="fill_parent"
                android:layout_marginLeft="100dp"
                android:focusableInTouchMode="true"
                android:duplicateParentState="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tab_booksearch_list_text_book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:background="?selector_text"
                    android:gravity="center_vertical"
                    android:textColor="?attr/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tab_booksearch_list_text_book_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tab_booksearch_list_text_book_title"
                    android:layout_below="@id/tab_booksearch_list_text_book_title"
                    android:background="?selector_text"
                    android:gravity="center_vertical"
                    android:textColorHighlight="@android:color/holo_blue_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tab_booksearch_list_text_book_publish_and_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tab_booksearch_list_text_book_title"
                    android:layout_below="@id/tab_booksearch_list_text_book_writer"
                    android:background="?selector_text"
                    android:gravity="center_vertical"
                    android:textColorHighlight="@android:color/holo_blue_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tab_booksearch_list_text_book_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tab_booksearch_list_text_book_title"
                    android:layout_below="@id/tab_booksearch_list_text_book_publish_and_year"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tab_booksearch_list_text_book_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tab_booksearch_list_text_book_site"
                    android:layout_below="@id/tab_booksearch_list_text_book_publish_and_year"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tab_booksearch_list_text_book_site"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/tab_booksearch_layout_book_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tab_booksearch_list_text_book_title"
                    android:layout_below="@id/tab_booksearch_list_text_book_state"
                    android:orientation="vertical" />
            </RelativeLayout>
        </FrameLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</android.support.v7.widget.CardView>