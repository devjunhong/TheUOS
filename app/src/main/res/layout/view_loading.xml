<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <ImageView
        android:id="@+id/view_loading_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/menu_ic_loading"
        android:contentDescription="@string/progress_while_loading" />

    <TextView
        android:id="@+id/view_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:gravity="center"
        android:text="@string/progress_while_loading"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="?attr/colorAccent" />

</LinearLayout>