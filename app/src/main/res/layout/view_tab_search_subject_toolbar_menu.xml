<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/tab_search_subject_head_layout"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="660">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            app:mrl_rippleColor="?colorAccent"
            app:mrl_rippleDelayClick="true">

            <TextView
                android:id="@+id/tab_search_subject_sub_dept1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/tab_search_subject_sub_dept1"
                android:textColor="?color_actionbar_title" />

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            app:mrl_rippleColor="?colorAccent"
            app:mrl_rippleDelayClick="true">

            <TextView
                android:id="@+id/tab_search_subject_sub_div1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/tab_search_subject_sub_div1"
                android:textColor="?color_actionbar_title" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            app:mrl_rippleColor="?colorAccent"
            app:mrl_rippleDelayClick="true">

            <TextView
                android:id="@+id/tab_search_subject_no1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/tab_search_subject_no1"
                android:textColor="?color_actionbar_title" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            app:mrl_rippleColor="?colorAccent"
            app:mrl_rippleDelayClick="true">

            <TextView
                android:id="@+id/tab_search_subject_class_div1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/tab_search_subject_class_div1"
                android:textColor="?color_actionbar_title" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            app:mrl_rippleColor="?colorAccent"
            app:mrl_rippleDelayClick="true">

            <TextView
                android:id="@+id/tab_search_subject_sub_nm1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/tab_search_subject_sub_nm1"
                android:textColor="?color_actionbar_title" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            app:mrl_rippleColor="?colorAccent"
            app:mrl_rippleDelayClick="true">

            <TextView
                android:id="@+id/tab_search_subject_yr1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/tab_search_subject_yr1"
                android:textColor="?color_actionbar_title" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            app:mrl_rippleColor="?colorAccent"
            app:mrl_rippleDelayClick="true">

            <TextView
                android:id="@+id/tab_search_subject_credit1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/tab_search_subject_credit1"
                android:textColor="?color_actionbar_title" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            app:mrl_rippleColor="?colorAccent"
            app:mrl_rippleDelayClick="true">

            <TextView
                android:id="@+id/tab_search_subject_prof_nm1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/tab_search_subject_prof_nm1"
                android:textColor="?color_actionbar_title" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            app:mrl_rippleColor="?colorAccent"
            app:mrl_rippleDelayClick="true">

            <TextView
                android:id="@+id/tab_search_subject_class_nm1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/tab_search_subject_class_nm1"
                android:textColor="?color_actionbar_title" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            app:mrl_rippleColor="?colorAccent"
            app:mrl_rippleDelayClick="true">

            <TextView
                android:id="@+id/tab_search_subject_tlsn_cnt1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/tab_search_subject_tlsn_cnt1"
                android:textColor="?color_actionbar_title" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            app:mrl_rippleColor="?colorAccent"
            app:mrl_rippleDelayClick="true">

            <TextView
                android:id="@+id/tab_search_subject_tlsn_limit1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/tab_search_subject_tlsn_limit1"
                android:textColor="?color_actionbar_title" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>
</HorizontalScrollView>