<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:id="@+id/tab_timetable_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="360" >

        <TextView
            android:id="@+id/tab_time_peroid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="48"
            android:background="?color_rosy_brown"
            android:gravity="center"
            android:text="@string/tab_timtable_period"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tab_time_mon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="51"
            android:background="?color_rosy_brown"
            android:gravity="center"
            android:text="@string/tab_timetable_mon"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tab_time_tue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="51"
            android:background="?color_rosy_brown"
            android:gravity="center"
            android:text="@string/tab_timetable_tue"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tab_time_wed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="51"
            android:background="?color_rosy_brown"
            android:gravity="center"
            android:text="@string/tab_timetable_wed"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tab_time_thur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="51"
            android:background="?color_rosy_brown"
            android:gravity="center"
            android:text="@string/tab_timetable_thr"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tab_time_fri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="51"
            android:background="?color_rosy_brown"
            android:gravity="center"
            android:text="@string/tab_timetable_fri"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tab_time_sat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="51"
            android:background="?color_rosy_brown"
            android:gravity="center"
            android:text="@string/tab_timetable_sat"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@+id/time_table_listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollingCache="true" >
    </ListView>

    <RelativeLayout
        android:id="@+id/tab_timetable_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?selector_button"
        android:gravity="center"
        android:padding="2dp"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/tab_timetable_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="?ic_content_import_export"
            android:text="@string/tab_timetable_empty_text1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab_timetable_empty_text"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:drawableLeft="?ic_navigation_accept"
            android:text="@string/tab_timetable_empty_text2" />
    </RelativeLayout>

</TableLayout>