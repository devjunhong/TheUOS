<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <Button
        android:id="@+id/dialog_timetable_button_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="?selector_button"
        android:drawableLeft="?ic_location_place"
        android:padding="2dp"
        android:text="@string/tab_timatable_callback_show_location_in_map" />

    <Button
        android:id="@+id/dialog_timetable_button_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_timetable_button_map"
        android:layout_marginTop="16dp"
        android:background="?selector_button"
        android:drawableLeft="?ic_collections_view_as_list"
        android:padding="2dp"
        android:text="@string/tab_timatable_callback_show_subject_plan" />

    <Button
        android:id="@+id/dialog_timetable_button_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_timetable_button_info"
        android:layout_marginTop="16dp"
        android:background="?selector_button"
        android:drawableLeft="?ic_device_access_alarms"
        android:padding="2dp"
        android:text="@string/tab_timatable_callback_noti"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/timetable_callback_alarm_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dialog_timetable_button_alarm"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/dialog_timetable_button_alarm"
        android:entries="@array/tab_timetable_alarm_time_array"
        android:scrollbars="none"
        android:visibility="gone" />

</RelativeLayout>