<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/timetable_callback_alarm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <NumberPicker
        android:id="@+id/score_datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timetable_callback_alarm_text"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/timetable_callback_alarm_text" />

    <NumberPicker
        android:id="@+id/score_termPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/score_editText1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/timetable_callback_alarm_text" />

    <EditText
        android:id="@+id/score_editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/score_datePicker"
        android:ems="10"
        android:hint="과목명을 입력하세요"
        android:inputType="text" >

        <requestFocus />
    </EditText>

</RelativeLayout>