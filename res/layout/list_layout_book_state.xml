<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp" >

    <TextView
        android:id="@+id/tab_booksearch_bookstate_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_above="@id/tab_booksearch_bookstate_location"
        android:layout_alignLeft="@id/tab_booksearch_bookstate_location"
        android:layout_marginBottom="2dp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tab_booksearch_bookstate_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tab_booksearch_bookstate_location"
        android:layout_below="@id/tab_booksearch_bookstate_location"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tab_booksearch_bookstate_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tab_booksearch_bookstate_code"
        android:layout_toRightOf="@id/tab_booksearch_bookstate_code" />

</RelativeLayout>