<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/tab_book_list_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:fastScrollEnabled="true"
        android:listSelector="@android:color/transparent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollingCache="true" >
    </ListView>

    <RelativeLayout
        android:id="@+id/tab_book_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/tab_book_search_empty_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/selector_button_dark"
            android:drawableLeft="@drawable/ic_action_action_search_dark"
            android:gravity="center_vertical"
            android:padding="1dp"
            android:text="@string/tab_book_empty_text1" />

        <TextView
            android:id="@+id/tab_book_search_empty_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tab_book_search_empty_info1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_button_dark"
            android:drawableLeft="@drawable/ic_action_action_help_dark"
            android:gravity="center_vertical"
            android:padding="1dp"
            android:text="@string/tab_book_empty_text2" />
    </RelativeLayout>

</RelativeLayout>