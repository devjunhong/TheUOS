<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto">

    <style name="Mystyle.BlackAndWhite.ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/Mystyle.BlackAndWhite.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/Mystyle.BlackAndWhite.ActionBar.SubTitleTextStyle</item>
    </style>

    <style name="Mystyle.BlackAndWhite.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Mystyle.BlackAndWhite.ActionBar.SubTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Mystyle.BlackAndWhite" parent="@style/Theme.Mystyle.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Mystyle.BlackAndWhite.ActionBarStyle</item>
        <item name="windowActionBar">false</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView</item>
        <item name="colorAccent">@color/material_grey_600</item>
        <item name="android:textColorPrimary">@color/material_grey_600</item>
        <item name="toolbar_actionbar_title">@style/Mystyle.BlackAndWhite.ActionBar.TitleTextStyle</item>
        <item name="toolbar_actionbar_subtitle">@style/Mystyle.BlackAndWhite.ActionBar.SubTitleTextStyle</item>
        <item name="windowActionBarOverlay">true</item>
       
        <!-- for color -->
        <item name="color_rosy_brown">@color/rosy_brown</item>
        <item name="color_actionbar_title">@android:color/white</item>
    </style>

</resources>