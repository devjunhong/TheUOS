<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto">

    <style name="Mystyle.Light.Blue" parent="@style/Theme.Mystyle.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/material_light_blue_400</item>
        <item name="colorPrimaryDark">@color/material_light_blue_600</item>
        <item name="colorAccent">@color/material_light_blue_600</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.Light.SearchView</item>
        <item name="android:textColorPrimary">@color/material_light_blue_800</item>
        <item name="actionBarStyle">@style/Mystyle.Light.Blue.ActionBarStyle</item>
        <item name="toolbar_actionbar_title">@style/Mystyle.Light.Blue.ActionBar.TitleTextStyle</item>
        <item name="toolbar_actionbar_subtitle">@style/Mystyle.Light.Blue.ActionBar.SubTitleTextStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:alertDialogTheme">@style/Mystyle.Light.Blue.AlertDialog</item>
        <item name="ic_loading">@anim/progress_medium_light_blue</item>

        <!-- for color -->
        <item name="color_rosy_brown">@color/rosy_brown</item>
        <item name="color_actionbar_title">@android:color/white</item>
    </style>

    <!-- ActionBar -->
    <style name="Mystyle.Light.Blue.ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/Mystyle.Light.Blue.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/Mystyle.Light.Blue.ActionBar.SubTitleTextStyle</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Mystyle.Light.Blue.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Mystyle.Light.Blue.ActionBar.SubTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- AlertDialog -->
    <style name="Mystyle.Light.Blue.AlertDialog" parent="Theme.Mystyle.Light.AlertDialog">
        <item name="android:windowTitleStyle">@style/Mystyle.Light.Blue.AlertDialogStyle</item>
    </style>

    <style name="Mystyle.Light.Blue.AlertDialogStyle" parent="Theme.Mystyle.Light.AlertDialogSytle">
        <item name="android:textAppearance">@style/Mystyle.Light.Blue.AlertDialogStyle.TextAppearance</item>
    </style>

    <style name="Mystyle.Light.Blue.AlertDialogStyle.TextAppearance" parent="Theme.Mystyle.Light.AlertDialogSytle.TextAppearance">
        <item name="android:textColor">@color/material_light_blue_600</item>
    </style>

</resources>