            android:configChanges="keyboardHidden|orientation|screenSize"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity android:name="com.uoscs09.theuos.tab.libraryseat.SubSeatWebActivity" >
        </activity>
        <activity
            android:name="com.uoscs09.theuos.tab.etc.EtcActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="user" >
        </activity>

        <service
            android:name="com.uoscs09.theuos.widget.timetable.Widget5x4ListService"
            android:exported="true"
            android:label="@string/widget_timetable"
            android:permission="android.permission.BIND_REMOTEVIEWS" >
        </service>
        <service
            android:name="com.uoscs09.theuos.widget.timetable.Widget4x4ListService"
            android:exported="true"
            android:label="@string/widget_timetable"
            android:permission="android.permission.BIND_REMOTEVIEWS" >
