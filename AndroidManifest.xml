        <service
            android:name="com.uoscs09.theuos.widget.restaurant.RestListService"
            android:exported="true"
            android:label="@string/widget_rest"
            android:permission="android.permission.BIND_REMOTEVIEWS" >
        </service>
        <service
            android:name="com.uoscs09.theuos.tab.anounce.ServiceForAnounce"
            android:label="@string/setting_anounce_noti" >
        </service>

        <receiver android:name="com.uoscs09.theuos.service.BReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" >
                </action>
            </intent-filter>
        </receiver>
        <receiver android:name="com.uoscs09.theuos.tab.timetable.TimeTableNotiReceiver" >
            <intent-filter>
                <action android:name="com.uoscs09.theuos.tab.timetable.set_alarm" >
                </action>
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.uoscs09.theuos.widget.timetable.TimeTableWidget4x4"
            android:label="@string/widget_timetable4x4" >
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_conf_timetable_4x4" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.uoscs09.theuos.widget.timetable.refresh" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.ACTION_EXTERNAL_APPLICATION_AVAILABLE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.uoscs09.theuos.widget.timetable.TimeTableWidget5x4"
            android:label="@string/widget_timetable5x4" >
